{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "types": ["vitest/globals"],
    "module": "NodeNext",
    "strict": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/vite-env.d.ts"],
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"],
      "@/*": ["./modules/*"]
    }
  }
}
